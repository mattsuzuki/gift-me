<%- include('../partials/header') %>
<div class="registry-new">
  <div class="width">
    <form class="box" action="/registries" method="POST">
      <h1>Create a registry</h1>

      <div class="field">
        <label>Name:</label>
        <input type="text" name="title" />
      </div>

      <div class="field">
        <label>Event:</label>
        <input type="text" name="eventType" />
      </div>

      <div class="field">
        <input
          class="button full-width"
          type="submit"
          value="Create registry"
        />
      </div>
    
    </form>
  </div>
</div>

